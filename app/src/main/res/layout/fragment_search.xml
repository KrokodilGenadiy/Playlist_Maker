<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.search_fragment.SearchFragment">


    <ImageView
        android:id="@+id/arrow_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/IconTint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_round_arrow_back_24"
        android:layout_marginTop="@dimen/dimens_20_dp"
        android:layout_marginStart="@dimen/dimens_20_dp"/>

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimens_28_dp"
        android:layout_marginTop="@dimen/dimens_14_dp"
        android:text="@string/search_screen_header"
        style="@style/SearchFragmentTitle"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="@dimen/dimens_22_sp"
        app:layout_constraintStart_toEndOf="@id/arrow_back"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="@string/search_hint"
        android:theme="@style/AppSearchView"
        app:queryHint="@string/search_hint"
        app:defaultQueryHint="@string/search_hint"
        android:queryBackground="@android:color/transparent"
        android:iconifiedByDefault="false"
        app:iconifiedByDefault="false"
        app:queryBackground="@null"
        android:layout_marginStart="@dimen/dimens_16_dp"
        android:layout_marginTop="@dimen/dimens_64_dp"
        android:layout_marginEnd="@dimen/dimens_16_dp"
        android:background="@drawable/background_search_view"
        android:imeOptions="actionDone"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        android:layout_centerHorizontal="true" />

    <include
        android:id="@+id/nc_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        layout="@layout/no_connection_placeholder"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/refresh"
        android:padding="@dimen/dimens_8_dp"
        android:textSize="@dimen/dimens_14_sp"
        android:textAllCaps="false"
        android:clickable="true"
        android:fontFamily="@font/ys_display_medium"
        android:textColor="@color/refresh_text_color"
        android:background="@drawable/refresh_button_background"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/nc_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dimens_24_dp">
    </androidx.appcompat.widget.AppCompatButton>

    <include
        android:id="@+id/nf_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        layout="@layout/not_found_placeholder"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/track_recycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_0_dp"
        tools:listitem="@layout/track_item"
        app:layout_constraintTop_toBottomOf="@id/search_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/dimens_16_dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>