<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_61_dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/poster"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimens_0_dp"
        android:layout_marginVertical="@dimen/dimens_8_dp"
        android:layout_marginStart="@dimen/dimens_13_dp"
        app:cardCornerRadius="@dimen/dimens_4_dp"
        android:elevation="@dimen/dimens_0_dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/placeholder" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/track_name"
        android:layout_width="@dimen/dimens_0_dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_regular"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/track_item_name_text"
        android:textSize="@dimen/dimens_16_sp"
        android:layout_marginHorizontal="@dimen/dimens_8_dp"
        android:layout_marginTop="@dimen/dimens_14_dp"
        app:layout_constraintEnd_toStartOf="@id/arrow_next"
        app:layout_constraintStart_toEndOf="@id/poster"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Yesterday (Remastered 2009)" />


    <TextView
        android:id="@+id/artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="@color/track_item_artist_text"
        android:textSize="@dimen/dimens_11_sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintEnd_toStartOf="@+id/dot"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/poster"
        app:layout_constraintTop_toBottomOf="@id/track_name"
        android:layout_marginStart="@dimen/dimens_8_dp"
        android:layout_marginTop="@dimen/dimens_1_dp"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="The Beatles" />

    <ImageView
        android:id="@+id/dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_dot"
        app:layout_constraintEnd_toStartOf="@+id/duration"
        app:layout_constraintStart_toEndOf="@+id/artist_name"
        app:layout_constraintTop_toBottomOf="@id/track_name"
        android:layout_marginTop="@dimen/dimens_1_dp"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/ys_display_regular"
        android:maxLines="1"
        android:textColor="@color/track_item_artist_text"
        android:textSize="@dimen/dimens_11_sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toStartOf="@+id/arrow_next"
        app:layout_constraintStart_toEndOf="@+id/dot"
        app:layout_constraintTop_toBottomOf="@id/track_name"
        android:layout_marginTop="@dimen/dimens_1_dp"
        android:layout_marginEnd="@dimen/dimens_8_dp"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="2:55" />

    <ImageView
        android:id="@+id/arrow_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimens_18_dp"
        android:layout_marginEnd="@dimen/dimens_12_dp"
        android:layout_marginBottom="@dimen/dimens_19_dp"
        android:src="@drawable/ic_arrow_forward_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>