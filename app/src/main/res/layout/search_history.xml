<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimens_16_dp"
        android:layout_marginTop="@dimen/dimens_18_dp"
        android:layout_marginBottom="@dimen/dimens_12_dp"
        android:text="@string/history_searched_text"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="@dimen/dimens_19_sp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal">
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/track_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/track_item"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/clear_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_history_text"
        android:padding="@dimen/dimens_6_dp"
        android:textSize="@dimen/dimens_14_sp"
        android:textAllCaps="false"
        android:clickable="true"
        android:fontFamily="@font/ys_display_medium"
        android:textColor="@color/refresh_text_color"
        android:background="@drawable/refresh_button_background"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimens_24_dp">
    </androidx.appcompat.widget.AppCompatButton>


</LinearLayout>