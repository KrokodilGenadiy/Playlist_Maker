<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainScreenButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimens_0_dp</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/dimens_16_dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginStart">@dimen/dimens_15_dp</item>
        <item name="android:layout_marginEnd">@dimen/dimens_15_dp</item>
    </style>
    <style name="MainScreenButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/dimens_4_dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/dimens_22_sp</item>
    </style>

    <style name="SettingsScreenOptionText">
        <item name="android:layout_width">@dimen/dimens_0_dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">@dimen/dimens_16_dp</item>
        <item name="android:layout_marginTop">@dimen/dimens_21_dp</item>
        <item name="android:layout_marginBottom">@dimen/dimens_21_dp</item>
        <item name="android:layout_marginEnd">@dimen/dimens_8_dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/dimens_16_sp</item>
    </style>
    <style name="IconTint">
        <item name="tint">?attr/colorOnPrimary</item>
    </style>
</resources>